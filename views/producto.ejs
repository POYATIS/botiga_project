    </div>

  </footer>
  <script>
	const carritoForm = document.getElementById("carrito-form");
	const menosButton = document.getElementById("menos");
	const masButton = document.getElementById("mas");
	const cantidadSpan = document.getElementById("cantidad");
  
	let cantidad = 0;
  
	function actualizarCantidad() {
	  cantidadSpan.textContent = cantidad;
	  document.getElementById("cantidad-input").value = cantidad;
	}
  
	menosButton.addEventListener("click", (event) => {
	  event.preventDefault(); 
	  if (cantidad > 0) {
		cantidad--;
		actualizarCantidad();
	  }
	});
  
	masButton.addEventListener("click", (event) => {
	  event.preventDefault();
	  cantidad++;
	  actualizarCantidad();
	});
  
	carritoForm.addEventListener("submit", (event) => {
	  event.preventDefault();
	  carritoForm.submit(); 
	});
  </script>
  
