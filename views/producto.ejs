<!-- productos-->
<div class="container mt-5 mb-5>
	<div class="row">
	  <div class="col-md-6 mx-auto">
		<div class="card">
		  <h5 class="card-title text-center mt-5 mb-5"><%= producto.nombre %></h5>
		  <img src="/assets/<%= producto.imagen %>" alt="<%= producto.nombre %>" class="card-img-top mx-auto d-block" style="max-width: 400px;">
		  <div class="card-body text-center">
			
			<p class="card-text"><%= producto.descripcion %></p>
			<p class="card-text"><%= producto.informacion %></p>
			<h3 class="card-text"><%= producto.precio %> €</h3>
			<!-- Carrito -->
			
			<form id="carrito-form" action="/shop/product/carrito" method="POST">
				<div id="carrito" class="d-flex justify-content-center align-items-center border p-3">
				  <button id="menos" class="btn btn-primary me-2">-</button>
				  <span id="cantidad" class="badge bg-secondary fs-4">0</span>
				  <button id="mas" class="btn btn-primary ms-2">+</button>
			  
				  <input type="hidden" name="cantidad" id="cantidad-input" value="0">
				  <input type="hidden" name="producto_id" value="<%= producto.id %>">
				  
				  <a href="/shop/product" class="mt-5 btn btn-outline-primary">Seguir comprando</a>
				  <button type="submit" class="mt-5 btn btn-outline-warning" data-id="<%= producto.id %>">Añadir al carrito</button>
				  
				</div>
			  </form>
		</div>
		</div>
	  </div>
	</div>
